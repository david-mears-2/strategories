<!DOCTYPE html>
<html>
  <head>
    <title>Strategorical</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <%= javascript_importmap_tags %>
    <script src="https://kit.fontawesome.com/fd77d3c496.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <div id="auth-div">
      <% if current_user.present? %>
        <i class="fa fa-user-circle" style="color: <%= current_user.color %>" aria-hidden="true"></i> <b><%= link_to current_user.name, user_path(current_user) %></b>
        <%= button_to "Sign out", destroy_session_path, method: :delete, form: { "style": "display: inline-block; float: right" } %>
      <% else %>
        <%= link_to "Sign in", new_session_path %>
      <% end %>
    </div>

    <% if notice %>
      <p style="color: green">
        <%= notice %> <span class="closeX" onclick="this.parentElement.remove()"><i class="fa-solid fa-xmark"></i></span>
      </p>
    <% end %>
    <% if alert %>
      <p style="color: red">
        <%= alert %> <span class="closeX" onclick="this.parentElement.remove()"><i class="fa-solid fa-xmark"></i></span>
      </p>
    <% end %>
    <%= yield %>
  </body>
</html>
